# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# BigQuery Configuration (Main)
# For local development: path to JSON key file (e.g., ./secrets/key.json)
# For Vercel deployment: full JSON content of service account key as a string
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_service_account_key.json
BIGQUERY_PROJECT_ID=nfl25-469415

# NFL BigQuery Configuration
# For local development: path to JSON key file
# For Vercel deployment: full JSON content of service account key as a string
GOOGLE_CLOUD_PROJECT_ID=nfl25-469415
GOOGLE_CLOUD_KEY_FILE=path_to_your_nfl_service_account_key.json

# NHL BigQuery Configuration
# For local development: path to JSON key file
# For Vercel deployment: full JSON content of service account key as a string
NHL_GCP_PROJECT_ID=nhl25-473523
NHL_GCP_KEY_FILE=path_to_your_nhl_service_account_key.json

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=KrashBoard V3

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here
SENTRY_DSN=your_sentry_dsn_here

# IMPORTANT FOR VERCEL DEPLOYMENT:
# When deploying to Vercel, service account keys must be provided as JSON strings, not file paths.
# Copy the entire contents of your JSON key file and paste it as the environment variable value.
# Example: GOOGLE_CLOUD_KEY_FILE='{"type":"service_account","project_id":"..."}'
